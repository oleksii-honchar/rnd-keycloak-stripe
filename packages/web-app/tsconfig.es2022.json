{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "src/*": [ "./src/*" ],
      "scripts/*": [ "./scripts/*" ],
      "package.json": ["./package.json"]
    },
    "module": "esnext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./configs",
    "./dist",
    "./docs",
    "./coverage",
    "./devops",
    "./src/assets"
  ]
}
