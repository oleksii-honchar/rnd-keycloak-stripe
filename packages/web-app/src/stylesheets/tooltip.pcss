.Tooltip {
  background-color: theme(colors.md.ref.pal.neutral800);
  color: theme(colors.md.sys.light.surface);
  font-size: 90%;
  padding: 4px 4px;
  border-radius: 4px;
  box-sizing: border-box;
  width: max-content;
  max-width: calc(100vw - 10px);
  transition-property: opacity;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);

  box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
}

.Tooltip-arrow {
  fill: theme(colors.md.ref.pal.neutral800);
}