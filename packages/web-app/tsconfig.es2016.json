{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "baseUrl": "./",
    "module": "CommonJS",
    "paths": {
      "src/*": [ "./src/*" ],
      "scripts/*": [ "./scripts/*" ],
      "package.json": ["./package.json"]
    },
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "target": "ES2016",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules",
    "./configs",
    "./dist",
    "./docs",
    "./coverage",
    "./devops",
    "./src/assets"
  ]
}
